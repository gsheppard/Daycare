<%= simple_form_for @daycare_pokemon do |f| %>
  <div class="row">
    <div class="col-xs-6 text-center" id="daycare_pokemon_general_info">
      <%= f.input :nickname, label: false, placeholder: 'Nickname' %>
      <%= f.association :pokemon, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
      <%= f.association :ability, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
      <%= f.association :nature, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
    </div>
    <div class="col-xs-6 text-center" id="daycare_pokemon_moveset">
      <%= f.association :move1, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move2, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move3, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move4, label_method: lambda{|l| l.identifier.titleize } %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <td>HP</td>
        <td>ATK</td>
        <td>DEF</td>
        <td>SPA</td>
        <td>SPD</td>
        <td>SPE</td>
      </tr>

      <tr>
        <td><%= f.input :hp_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
        <td><%= f.input :atk_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
        <td><%= f.input :def_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
        <td><%= f.input :spe_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
        <td><%= f.input :spa_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
        <td><%= f.input :spd_iv, as: :boolean, checked_value: true, unchecked_value: false, label: false %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <%= f.input :gender,
                collection: @genders,
                label_method: lambda{|l| l[:label]},
                value_method: lambda{|l| l[:value]},
                as: :radio_buttons,
                item_wrapper_class: 'inline',
                label: false
    %>
  </div>

  <div class="row">
    <%= f.button :submit, 'New', class: 'btn btn-success' %>
  </div>

<% end %>

<div class="row text-right">
  <span id="daycare_form_show">
    Add New <span class="glyphicon glyphicon-plus-sign"></span>
  </span>
  <span id="daycare_form_hide">
    Close <span class="glyphicon glyphicon-remove-sign"></span>
  </span>
</div>
