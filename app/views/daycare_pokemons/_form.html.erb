<div class="row">
  <%= simple_form_for @daycare_pokemon do |f| %>
    <div class="col-sm-2">
      <%= f.input :nickname %>
      <%= f.association :pokemon, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
      <%= f.association :ability, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
      <%= f.association :nature, label_method: lambda{|l| l.identifier.titleize }, value_method: :id %>
    </div>
    <div class="col-sm-2">
      <%= f.association :move1, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move2, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move3, label_method: lambda{|l| l.identifier.titleize } %>
      <%= f.association :move4, label_method: lambda{|l| l.identifier.titleize } %>
    </div>
    <div class="col-sm-3">
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :hp_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "HP" %>
          <%= f.input :atk_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "ATK" %>
          <%= f.input :def_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "DEF" %>
          <%= f.input :spe_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "SPE" %>
          <%= f.input :spa_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "SPA" %>
          <%= f.input :spd_iv, as: :boolean, checked_value: true, unchecked_value: false, label: "SPD" %>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
      <%= f.input :gender,
                  collection: @genders,
                  label_method: lambda{|l| l[:label]},
                  value_method: lambda{|l| l[:value]},
                  as: :radio_buttons,
                  label: false
      %>
    </div>

    <div class="col-sm-2">
      <%= f.button :submit, 'New', class: 'btn btn-success' %>
    </div>

  <% end %>
</div>
