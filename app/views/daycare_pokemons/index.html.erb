<div class="row">
  <%= simple_form_for @daycare_pokemon do |f| %>
    <div class="col-sm-2">
      <%= f.input :nickname, label: false, placeholder: 'Nickname' %>
    </div>
    <div class="col-sm-2">
      <%= f.association :pokemon, as: :string, label: false, placeholder: 'Pokemon' %>
    </div>
    <div class="col-sm-2">
      <%= f.association :ability, as: :string, label: false, placeholder: 'Ability' %>
    </div>
    <div class="col-sm-2">
      <%= f.association :nature, as: :string, label: false, placeholder: 'Nature' %>
    </div>
    <div class="col-sm-2">
      <%= f.button :submit, 'New', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
